= error_messages_for('user_session')
.page.shadow
  .stripe
    .left
      %h2
        Well, hello!
      %span.info
        Pleasure to see you again! Let's log in and get started!
    .right
    .clear
  .content.halfdark
    .left
      .box
        - form_for @user_session, :url => user_session_path do |f|
          = f.error_messages
          = f.label :email, "Email"
          %br
          = f.text_field :email, :class => 'textfield'
          %br
          %br
          = f.label :password
          %br
          = f.password_field :password, :class => 'textfield'
          %br
          %br
          = f.check_box :remember_me
          = f.label :remember_me
          %br
          %br
          = f.submit "Login"
    .right
      .callout.link
        .fold
        %a{:href => register_url }
          .content
            %h3
              ARE YOU NEW HERE?
            %p
              MAKERFACTORY is a service for connecting makers with people who need things made. Want to play? Click here to sign up for an account.
    .clear
