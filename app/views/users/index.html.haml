%h1
  Listing users
%table
  %tr
    %th
      Login
    %th{ :colspan => "3" }
  - @users.each do |user|
  %tr
    %td
      = h user.login
    %td
      = link_to 'Show', user
    %td
      = link_to 'Edit', edit_user_path(user)
    %td
      = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete
  - end
%br
= link_to 'New user', new_user_path
