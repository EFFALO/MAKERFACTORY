.page.shadow
  .stripe
    .left
      %h2
        ACTIVE
      %span.info
        This page shows your active jobs and bids
    .clear
  %h3
    My Jobs
  %table.list{ :cellspacing => "0", :cellpadding => "0"}
    %tr
      %th.title
        JOB TITLE
      %th.deliver-to
        DELIVER TO
      %th.deliver-by
        DELIVER BY
      %th.quantity
        QUANTITY
    - @jobs.each do |job|
      %tr{:class => cycle('prim', 'alt'), 'data-href' => job_url(job)}
        %td
          = job.title
        %td
          = job.deliver_to
        %td
          = job.deliver_by
        %td
          = job.quantity_needed
          
  %h3
    My Bids
  %table.list{ :cellspacing => "0", :cellpadding => "0" }
    %tr
      %th.title
        JOB TITLE
      %th.deliver-to
        DELIVER TO
      %th.deliver-by
        DELIVER BY
      %th.quantity
        QUANTITY
      %th.date-bidded
        BIDDED AT
    - @bids.each do |bid|
      %tr{:class => cycle('prim', 'alt'), 'data-href' => job_url(bid.job)}
        %td
          = bid.job.title
        %td
          = bid.job.deliver_to
        %td
          = bid.job.deliver_by 
        %td
          = "#{bid.quantity}/#{bid.job.quantity_needed}"
        %td
          = bid.created_at.strftime('%y/%m/%d')